{
  "compilerOptions": {
    "target": "ES2020", // <--- CHANGED: Minimum ES2018, ES2020 is a good modern default
    "lib": ["ES2020", "DOM", "DOM.Iterable"], // <--- CHANGED: Aligned with target, standard casing
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false, // Consider changing to true for better code quality in the long run
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/utils/shopify.js", "src/app/api/remove-background/route.js", "src/app/api/generate-fashion-image/route.js"],
  "exclude": ["node_modules"]
}